<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        app:cardCornerRadius="30dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/priceLabel"
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"/>
                <TextView
                    android:id="@+id/label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_weight="0.10"
                    android:textSize="18dp"
                    android:layout_below="@id/priceLabel"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="8dp"/>

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:id="@+id/discrete1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    app:dsb_min="0"
                    app:dsb_max="10"
                    app:dsb_value="0"
                    app:dsb_thumbSize="3dp"
                    app:dsb_indicatorColor="@color/colorPrimary"
                    app:dsb_progressColor="@color/colorPrimary"
                    android:layout_below="@+id/priceLabel"
                    android:layout_weight="0.5"
                    android:layout_toLeftOf="@+id/label2"
                    android:layout_toRightOf="@id/label1"
                    android:layout_marginTop="25dp"
                    />
                <TextView
                    android:id="@+id/label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000"
                    android:layout_weight="0.2"
                    android:textSize="18dp"
                    android:layout_marginTop="25dp"
                    android:layout_below="@id/priceLabel"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category_prompt"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:alpha="0.6"
        android:layout_marginTop="10dp"
        android:layout_below="@id/discrete1"/>
    <Spinner
        android:id="@+id/category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/category_prompt"
        android:entries="@array/category_arrays"
        android:layout_below="@+id/categoryLabel"
        android:padding="4dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="0.75"
        android:singleLine="true"
        android:textSize="16dp"
        android:alpha="0.75" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/done"
        android:text="DONE"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:fontFamily="@font/raleway_semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>