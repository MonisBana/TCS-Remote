<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/swipe"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/productImage"
            android:fontFamily="@font/raleway_semibold"
            android:text="Samsung Galaxy J8"
            android:textSize="16dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/grayview"
            android:layout_width="170dp"
            android:layout_height="1dp"
            android:layout_below="@+id/productCategory"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/productImage"
            android:background="@color/lightgray" />
        <TextView
            android:id="@+id/productCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/productImage"
            android:fontFamily="@font/raleway_semibold"
            android:text="Mobiles"
            android:textSize="14dp"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grayview"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/productImage"
            android:fontFamily="@font/raleway_semibold"
            android:text="â‚¹58,000"
            android:textSize="16dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.2"
            android:layout_below="@id/grayview"
            android:layout_toRightOf="@id/productImage"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/raleway_semibold"
            android:layout_marginTop="7dp"
            android:textStyle="bold" />
        <ImageView
            android:src="@drawable/star_18"
            android:layout_toRightOf="@id/rating"
            android:layout_below="@id/grayview"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"/>
        <TextView
            android:id="@+id/ratingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/productImage"
            android:alpha="0.8"
            android:fontFamily="@font/raleway_regular"
            android:text="Rating" />


        <TextView
            android:id="@+id/priceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productPrice"
            android:layout_marginLeft="140dp"
            android:layout_toRightOf="@id/productImage"
            android:alpha="0.8"
            android:fontFamily="@font/raleway_regular"
            android:text="Price" />
        <TextView
            android:id="@+id/addToWishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD TO WISHLIST"
            android:textColor="@color/colorAccent"
            android:background="@color/white"
            android:layout_below="@id/ratingLabel"
            android:layout_toRightOf="@id/productImage"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.9"
            android:clickable="true"
            android:fontFamily="@font/raleway_semibold"/>
        <TextView
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REMOVE"
            android:textColor="@color/colorAccent"
            android:background="@color/white"
            android:layout_below="@id/ratingLabel"
            android:layout_toRightOf="@id/addToWishlist"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:alpha="0.9"
            android:clickable="true"
            android:fontFamily="@font/raleway_semibold"
            android:layout_marginRight="4dp"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/addToWishlist"/>
    </RelativeLayout>

</LinearLayout>

