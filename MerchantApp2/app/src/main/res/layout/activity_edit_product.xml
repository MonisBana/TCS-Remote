<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProduct">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageSelect"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:background="#00ffffff"
            android:elevation="1dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/preview"/>

        <EditText
            android:id="@+id/nameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageSelect"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_outline"
            android:ems="10"
            android:hint="Product Name"
            android:inputType="textPersonName"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:singleLine="true"
            android:fontFamily="@font/raleway_regular"
            android:textSize="16dp"
            android:alpha="0.75" />

        <EditText
            android:id="@+id/descField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameField"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_outline"
            android:ems="10"
            android:hint="Product Description"
            android:inputType="textMultiLine"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:singleLine="true"
            android:fontFamily="@font/raleway_regular"
            android:textSize="16dp"
            android:alpha="0.75"
            />

        <EditText
            android:id="@+id/priceField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/input_outline"
            android:hint="Price"
            android:layout_below="@id/descField"
            android:ems="10"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:singleLine="true"
            android:fontFamily="@font/raleway_regular"
            android:textSize="16dp"
            android:alpha="0.75"/>

        <EditText
            android:id="@+id/quantityField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/input_outline"
            android:hint="Quantity"
            android:layout_below="@id/priceField"
            android:ems="10"
            android:layout_margin="20dp"
            android:padding="15dp"
            android:singleLine="true"
            android:fontFamily="@font/raleway_regular"
            android:textSize="16dp"
            android:alpha="0.75"/>
        <TextView
            android:id="@+id/categoryLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category_prompt"
            android:layout_below="@+id/quantityField"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:alpha="0.6"/>

        <Spinner
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/category_prompt"
            android:entries="@array/category_arrays"
            android:layout_below="@+id/categoryLabel"
            android:padding="4dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.75"
            android:singleLine="true"
            android:fontFamily="@font/raleway_regular"
            android:textSize="16dp"
            android:alpha="0.75"/>
        <Button
            android:id="@+id/updateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category"
            android:text="UPDATE"
            android:fontFamily="@font/raleway_semibold"
            android:textSize="14dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
</ScrollView>